<%- include('../partials/header.ejs')%>
<main>
    <div>
        <div class="formHeading">
        <p id="intro">Welcome to Fantasy Merch</p>
        <p id="intro">Enter the below details to Sign Up</p>
        </div>
        <div class="tradeform">
            <form action="/users" method="POST">
                <div>
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" class = "fixed-width" required>
                </div>
                <div>
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" class = "fixed-width" required>
                </div>
                <div>
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" class = "fixed-width" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class = "fixed-width" 
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Must contain at least one number, one uppercase, one lowercase letter, and at least 8 or more characters" minlength="8" maxlength="64" required>
                </div>
                <button type="submit" id="createMerch">Signup</button>
            </form> 
        </div>
        <div id="message">
            <p id="intro">Password must contain the following:</p>
            <p id="intro" >A <b>lowercase</b> letter</p>
            <p id="intro" >A <b>capital (uppercase)</b> letter</p>
            <p id="intro" >A <b>number</b></p>
            <p id="intro" >Minimum <b>8 characters</b></p>
          </div>
        <!-- <p id="submitdesc">Please enter all the details and click on submit button. This will add your item to our list and redirect to trades page.</p> -->
    </div>
</main>
